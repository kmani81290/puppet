puppet help                                                                          
puppet help | tail -n 1                               
apt-get purge puppet puppet-common -y                 
apt-get autoremote -y                                 
apt-get autoremove -y                                 
apt-get update                                                                                 
apt-get install puppetmaster -y                       
vi /etc/hostname                                      
vi /etc/puppet/                                       
cd /etc/puppet/                                                                                         
cd /var/lib/puppet/                                                                                   
cd /var/lib/puppet/ssl                                                                                   
service puppetmaster stop                                                                          
        
